{
  "schemaVersion": 1,
  "id": "lidar",
  "name": "Lidar (Fabric)",
  "version": "$version",
  "environment": "client",
  "icon": "assets/lidar/icon.png",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "me.jfenn.lidar.Lidar"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "me.jfenn.lidar.LidarClient"
      }
    ]
  },
  "depends": {
    "fabricloader": ">=0.16.9",
    "fabric-language-kotlin": "*",
    "satin": ">=2.0.0",
    "minecraft": ">=1.21-"
  },
  "contact": {
    "homepage": "https://minecraft.horrific.dev/",
    "sources": "https://gitlab.com/horrific-tweaks/lidar/",
    "issues": "https://gitlab.com/horrific-tweaks/lidar/issues/"
  },
  "authors": [
    "fennifith",
    "Rico040"
  ],
  "description": "Modifies the Minecraft renderer to display lidar dots of a world",
  "mixins": [
    "mixins.lidar.json"
  ]
}
